{
  "name": "concert-ticket-app",
  "private": true,
  "version": "1.0.0",
  "description": "Concert Ticket Booking System - Monorepo",
  "main": "index.js",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api start:dev",
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:api\"",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "build:packages": "pnpm --filter \"@concert/*\" build",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter api test",
    "type-check": "pnpm -r type-check",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "reset": "pnpm clean && rm -rf node_modules && pnpm install"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": ["concert", "ticket", "booking", "monorepo", "nestjs", "nextjs"],
  "author": "Concert Ticket Team",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1"
}
